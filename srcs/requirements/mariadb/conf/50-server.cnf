[mysqld]

user 					= mysql
port 					= 3306
basedir 				= /usr 
datadir					= /var/lib/mysql
tmpdir 					= /tmp
lc-messages-dir         = /usr/share/mysql
pid-file                = /var/run/mysqld/mysql.pid
socket                  = /var/run/mysqld/mysql.sock
log_error 				= /var/log/mysql/error.log

[client]

socket					= /var/lib/mysql/mysql.sock
